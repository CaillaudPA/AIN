{% extends "UserBundle::layout.html.twig" %}
{% block fos_user_content %}

<style type="text/css">
   body {
      background-color: #DADADA;
   }
   body > .grid {
      height: 100%;
   }
   .image {
      margin-top: -100px;
   }
   .column {
      max-width: 450px;
   }
</style>
<script>
   $(document)
           .ready(function() {
              $('.ui.form')
                      .form({
                         fields: {
                            email: {
                               identifier  : 'email',
                               rules: [
                                  {
                                     type   : 'empty',
                                     prompt : 'Please enter your e-mail'
                                  },
                                  {
                                     type   : 'email',
                                     prompt : 'Please enter a valid e-mail'
                                  }
                               ]
                            },
                            password: {
                               identifier  : 'password',
                               rules: [
                                  {
                                     type   : 'empty',
                                     prompt : 'Please enter your password'
                                  },
                                  {
                                     type   : 'length[6]',
                                     prompt : 'Your password must be at least 6 characters'
                                  }
                               ]
                            }
                         }
                      })
              ;
           })
   ;
</script>
</head>
<body>
{% if error %}
   <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="ui middle aligned center aligned grid">
   <div class="column">
      <h2 class="ui teal image header">
         <div class="content">
            All In One
         </div>
      </h2>
      <form class="ui large form" action="{{ path("fos_user_security_check") }}" method="POST">
         <div class="ui stacked segment">
            <div class="field">
               <div class="ui left icon input">
                  <i class="user icon"></i>
                  <input type="text" name="_username" placeholder="Nom d'utilsateur">
               </div>
            </div>
            <div class="field">
               <div class="ui left icon input">
                  <i class="lock icon"></i>
                  <input type="password" name="_password" placeholder="Mot de passe">
               </div>
            </div>
            <div class="field">
               <div class="ui checkbox"
                  <input tabindex="0" name="_remember_me" class="" type="checkbox">
                  <label>Se souvenir de moi</label>
               </div>
            </div>
            <div class="ui fluid large teal submit button">Login</div>
         </div>

         <div class="ui error message"></div>

      </form>

      <div class="ui message">
         Nous rejoindre ? <a href="#">S'enregistrer</a>
      </div>
   </div>
</div>

{% endblock fos_user_content %}



